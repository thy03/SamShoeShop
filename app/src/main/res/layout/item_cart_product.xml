<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/puma_pink"
        android:background="@drawable/circle_bg"
        android:contentDescription="Shoe image"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nike Air Max"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$64.95"
            android:textColor="#888888"
            android:textSize="14sp" />

        <!-- Quantity controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#EEEEEE"
                android:src="@drawable/tru_ic"
                android:background="@null"
                android:contentDescription="Decrease" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#5DA3FA"
                android:src="@drawable/add_ic"
                android:background="@null"
                android:contentDescription="Increase" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40"
        android:textColor="#000000"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/delete_ic"
        android:contentDescription="Delete item" />
</LinearLayout>
