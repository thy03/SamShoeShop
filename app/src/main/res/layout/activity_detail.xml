<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button and Title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Men's Shoes"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_cart"
                android:contentDescription="Lock" />
        </RelativeLayout>

        <!-- Product Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/puma_pink"
            android:contentDescription="Nike Air Jordan" />

        <!-- Detail Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFD0D0"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="70dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEST SELLER"
                android:textColor="#888888"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Nike Jordan"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$967.800"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                tools:ignore="HardcodedText" />


            <!-- Gallery -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:textColor="#000000" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/puma_pink"
                        android:background="@drawable/circle_bg" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Shoe"
                        android:src="@drawable/puma_pink"
                        android:background="@drawable/circle_bg"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Shoe"
                        android:src="@drawable/puma_pink"
                        android:background="@drawable/circle_bg"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Size -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Size buttons (có thể custom với background_circle.xml) -->
                <TextView
                    android:text="38"
                    style="@style/SizeOption" />

                <TextView
                    android:text="39"
                    style="@style/SizeOption" />



                <TextView
                    android:text="41"
                    style="@style/SizeOption" />

                <TextView
                    android:text="42"
                    style="@style/SizeOption" />
            </LinearLayout>

            <!-- Price + Add to Cart -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <!-- Label "Price" -->
                <TextView
                    android:id="@+id/price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Price"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_alignParentTop="true"
                    android:textStyle="bold" />

                <!-- Actual Price -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price_label"
                    android:layout_alignParentStart="true"
                    android:text="$849.69"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <!-- Add to Cart Button -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Add To Cart"
                    android:backgroundTint="#5DA3FA"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
